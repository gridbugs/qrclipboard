{
  "name": "QR Clipboard",
  "version": "0.4",
  "description": "Display the clipboard contents as a QR code",
  "browser_action": {
          "default_icon": "icon32.png",
          "popup": "qr.html"
    },

    "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["qr.css"],
      "js": ["qr.js", "jsqr-0.2-min.js", "jquery-1.7.2.min.js"]
    }],
    "permissions": [
        "clipboardRead",
        "clipboardWrite"
    
  ],
  "icons": {
        "32": "icon32.png" 
  }
}
